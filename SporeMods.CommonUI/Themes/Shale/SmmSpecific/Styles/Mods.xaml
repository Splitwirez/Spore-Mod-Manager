    <!--### Installed mods list entry ###-->
    <Style x:Key="InstalledModsListEntryStyle" TargetType="{x:Type Expander}" BasedOn="{StaticResource {x:Type Expander}}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Expander}">
                    <DockPanel>
                        <ContentPresenter x:Name="HeaderPresenter"
                                        ContentSource="Header"
                                        Height="32"
                                        Margin="0,-4"
                                        DockPanel.Dock="Top"/>
                        <Rectangle x:Name="TopGap"
                                DockPanel.Dock="Top"
                                Height="8"
                                LayoutTransform="{Binding Source={x:Reference ContentTransform}}"
                                Visibility="Hidden"/>
                        <Rectangle x:Name="BottomGap"
                                DockPanel.Dock="Bottom"
                                Height="4"
                                LayoutTransform="{Binding Source={x:Reference ContentTransform}}"
                                Visibility="Hidden"/>
                        <cui:FloorPanel x:Name="ExpandArea">
                            <Separator VerticalAlignment="Top"
                                    cui:AttachedProperties.CastDirection="Down"
                                    IsHitTestVisible="False"
                                    Opacity="{Binding ScaleY, Source={x:Reference ContentTransform}, Mode=OneWay}"/>
                            <!--Margin="56,0"-->

                            <ContentPresenter x:Name="ContentContainer"
                                            ContentSource="Content"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,8,0,-4">
                                <ContentPresenter.LayoutTransform>
                                    <ScaleTransform x:Name="ContentTransform" ScaleY="0"/>
                                </ContentPresenter.LayoutTransform>
                            </ContentPresenter>
                        </cui:FloorPanel>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=LayoutTransform.(ScaleTransform.ScaleY), ElementName=ContentContainer}" Value="0">
                            <!--Setter TargetName="HeaderContentGap" Property="Visibility" Value="Collapsed"/-->
                            <Setter TargetName="ExpandArea" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="TopGap" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="BottomGap" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}}" Value="True">
                            <!--MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsExpanded, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="True"/>
                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListViewItem}}}" Value="True"/>
                            </MultiDataTrigger.Conditions-->
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TopGap"
                                                        Storyboard.TargetProperty="Height"
                                                        To="12"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                        <DoubleAnimation Storyboard.TargetName="BottomGap"
                                                        Storyboard.TargetProperty="Height"
                                                        To="0"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                        <!--ThicknessAnimation Storyboard.TargetName="HeaderPresenter"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="4,-4,0,-4"
                                                            Duration="0:0:0.125"
                                                            EasingFunction="{StaticResource ScaleEase}"/-->
                                        <!--ThicknessAnimation Storyboard.TargetName="ExpandArea"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0,12,0,4"
                                                            Duration="0:0:0.125"
                                                            EasingFunction="{StaticResource ScaleEase}"/-->
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="TopGap"
                                                        Storyboard.TargetProperty="Height"
                                                        To="8"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                        <DoubleAnimation Storyboard.TargetName="BottomGap"
                                                        Storyboard.TargetProperty="Height"
                                                        To="4"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                        <!--ThicknessAnimation Storyboard.TargetName="HeaderPresenter"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0,-4"
                                                            Duration="0:0:0.125"
                                                            EasingFunction="{StaticResource ScaleEase}"/-->
                                        <!--ThicknessAnimation Storyboard.TargetName="ExpandArea"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0,8"
                                                            Duration="0:0:0.125"
                                                            EasingFunction="{StaticResource ScaleEase}"/-->
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <Trigger Property="IsExpanded" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentTransform"
                                                        Storyboard.TargetProperty="ScaleY"
                                                        To="1"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentTransform"
                                                        Storyboard.TargetProperty="ScaleY"
                                                        To="0"
                                                        Duration="0:0:0.125"
                                                        EasingFunction="{StaticResource ScaleEase}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

