                <Setter TargetName="ProgressDisplay" Property="Style" Value="{DynamicResource ModListProgressDisplayStyle}"/>
            </MultiDataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate-->
</ResourceDictionary>